<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">アカウントを編集</h2>

        <%= form_with model: @user, url: user_path(@user.id), local: true do |f| %>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :nickname, "ニックネーム" %><br />
          <%= f.text_field :nickname, id:"user_name" %>
        </div>

        <div class="field">
          <%= f.label :profile, "プロフィール" %><br />
          <%= f.text_area :profile, class: :form__text, id:"user_profile" %>
        </div>
        <br />
        <div class="actions">
          <%= f.submit "編集", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>
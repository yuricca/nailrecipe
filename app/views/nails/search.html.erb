<%= form_with(url: search_nails_path, local: true, method: :get, class: "search-form") do |form| %>
  <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
  <%= form.submit "検索", class: "form-btn" %>
<% end %>
<br><br>

<div class="inner">
  <% @nails.each do |nail| %>
    <%= render partial: "nail", locals: { nail: nail } %>
  <% end %>
</div>
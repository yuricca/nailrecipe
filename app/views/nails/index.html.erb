<%= form_with(url: search_nails_path, local: true, method: :get, class: "search-form") do |form| %>
  <%= form.text_field :keyword, placeholder: "ネイルデザインを検索する", class: "search-input" %>
  <%= form.submit "検索", class: "form__btn" %>
<% end %>
<br><br>

<main class="main">
  <div class="inner">
    <% if user_signed_in? %>
      <div class="status">
        <%= "Welcome!" %>
        <%= link_to "#{current_user.nickname}", user_path(current_user.id), class: :status__link%>
      </div>
    <% end %>
    <div class="card__wrapper">
      <%= render partial: "nail", collection: @nails %>
    </div>
  </div>
</main>
